# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space

[*.py]
indent_size     = 4
max_line_length = 120

[{*.yml, *.yaml}]
indent_size = 2

[Dockerfile]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
